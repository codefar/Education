<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg1"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_17_dip"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:text="@string/about_content"
        android:textColor="@color/about_content"
        android:textSize="@dimen/dimen_12_dip" 
        android:lineSpacingExtra="@dimen/dimen_5_dip"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_23_dip"
        android:background="@color/announcement_divider" />
    <!-- 官方网站 -->

    <LinearLayout
        android:id="@+id/website_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43_dip"
        android:background="@drawable/my_account_preference_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_17_dip"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/website"
                android:textColor="@color/my_account_preference_title"
                android:textSize="@dimen/dimen_14_dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/website_content"
                android:textColor="@color/disable_text"
                android:textSize="@dimen/dimen_14_dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@drawable/divider_selector" />
        </FrameLayout>
    </LinearLayout>
    <!-- 新浪微博 -->

    <LinearLayout
        android:id="@+id/sina_weibo_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43_dip"
        android:background="@drawable/my_account_preference_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_17_dip"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/sina_weibo"
                android:textColor="@color/my_account_preference_title"
                android:textSize="@dimen/dimen_14_dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/sina_weibo_content"
                android:textColor="@color/disable_text"
                android:textSize="@dimen/dimen_14_dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@drawable/divider_selector" />
        </FrameLayout>
    </LinearLayout>
    <!-- 微信账户 -->

    <LinearLayout
        android:id="@+id/webchat_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43_dip"
        android:background="@drawable/my_account_preference_selector"
        android:clickable="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_17_dip"
                android:orientation="vertical"
                tools:ignore="UselessParent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/webchat"
                    android:textColor="@color/my_account_preference_title"
                    android:textSize="@dimen/dimen_14_dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dimen_17_dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/webchat_content"
                    android:textColor="@color/disable_text"
                    android:textSize="@dimen/dimen_14_dip" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/divider_selector" />
    </LinearLayout>
	<!--购买-->
        <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_43_dip"
                android:layout_marginTop="@dimen/dimen_23_dip"
                android:layout_marginLeft="@dimen/dimen_17_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:text="立即购买"
                android:id="@+id/buy"
                style="@style/MajorButton"/>
</LinearLayout>