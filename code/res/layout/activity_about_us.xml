                android:textColor="@color/my_account_preference_title"
                android:textSize="@dimen/dimen_14_dip"
                android:includeFontPadding="false"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_17_dip"
                android:paddingRight="@dimen/dimen_17_dip">
            <TextView
                    android:layout_width="@dimen/dimen_125_dip"
                    android:layout_height="@dimen/dimen_155_dip"
                    android:text="微信二维码"
                    android:textColor="@color/my_account_preference_title"
                    android:textSize="@dimen/dimen_14_dip"
                    android:includeFontPadding="false"
                    android:drawableTop="@drawable/wx_qr_code"
                    android:layout_gravity="left"
                    android:gravity="center_horizontal"/>

            <TextView
                    android:layout_width="@dimen/dimen_125_dip"
                    android:layout_height="@dimen/dimen_155_dip"
                    android:text="微博二维码"
                    android:textColor="@color/my_account_preference_title"
                    android:textSize="@dimen/dimen_14_dip"
                    android:includeFontPadding="false"
                    android:drawableTop="@drawable/wb_qr_code"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17_dip"
                android:layout_marginLeft="@dimen/dimen_17_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:text="客服QQ：3052333015，30356074"
                android:textSize="@dimen/dimen_12_dip"
                android:textColor="@color/first_text"
