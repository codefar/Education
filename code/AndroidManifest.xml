        <activity
            android:name=".SmartRecommentActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.education.LoginActivity"
                  android:label="LoginActivity"
                  android:exported="true"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.education.RegisterActivity"
                  android:label="RegisterActivity"
                  android:exported="true"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.education.FindPasswordActivity"
                  android:label="FindPasswordActivity"
                  android:exported="true"
                  android:screenOrientation="portrait"/>
