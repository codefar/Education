                  android:label="ChangePasswordActivity"
                  android:exported="true"
                  android:screenOrientation="portrait"/>

        <activity android:name="com.education.CollectionListActivity"
                  android:label="CollectionListActivity"
                  android:exported="true"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.education.FilterActivity"
                  android:label="FilterActivity"
                  android:exported="true"
                  android:screenOrientation="portrait"/>
        <activity android:name=".AdmissionInPastYearActivity"
                  android:label="AdmissionInPastYearActivity"
                  android:exported="true"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".SetUserInfoActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
        </activity>


        <activity
                android:name=".wxapi.WXEntryActivity"
                android:label="@string/app_name"
                android:exported="true"
                android:launchMode="singleTop"/>
    </application>

</manifest>